@model IEnumerable<ProjetoFinalCurso1500.Models.TestDrive>

@{
    ViewData["Title"] = "Index";
}

<h1 class="">Carros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concessionaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salesman)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concessionaire.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salesman.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-1">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-1">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-1">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
