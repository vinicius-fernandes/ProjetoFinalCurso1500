@model ProjetoFinalCurso1500.Models.TestDriveDTO

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-6">Cadastrar</h1>

<h4>TestDrive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <label asp-for="IdConcessionaire" class="control-label"></label>
                <select asp-for="IdConcessionaire" id="Concessionairies" class ="form-control" asp-items="ViewBag.IdConcessionaire" onchange="getCars();getSalesmen();"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCar" class="control-label"></label>
                <select asp-for="IdCar" id="Cars"class ="form-control" ></select>
            </div>
            <div class="form-group">
                <label asp-for="IdSalesman" class="control-label"></label>
                <select asp-for="IdSalesman" id="Salesmen"class ="form-control" ></select>
            </div>

            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class ="form-control" asp-items="ViewBag.IdClient"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/TestDrive/TestDrive.js">
    </script>
}
