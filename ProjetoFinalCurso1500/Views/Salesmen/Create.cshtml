@model ProjetoFinalCurso1500.Models.SalesmanDTO

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-6">Cadastrar</h1>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Salarie" class="control-label"></label>
                <input asp-for="Salarie" class="form-control" />
                <span asp-validation-for="Salarie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdConcessionaire" class="control-label"></label>
                <select asp-for="IdConcessionaire" class ="form-control" asp-items="ViewBag.IdConcessionaire"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
